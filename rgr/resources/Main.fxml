          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>
   <center>
    <BorderPane BorderPane.alignment="CENTER">
      <top>
        <ToolBar BorderPane.alignment="CENTER" fx:id="toolBar">
          <items>
            <Button id="rectangle" mnemonicParsing="false">
              <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0">
                  <image>
                    <Image url="@icons/rectangle.png" />
                  </image>
                </ImageView>
              </graphic>
              <tooltip>
                <Tooltip text="Rectangle" />
              </tooltip>
            </Button>
            <Button id="ellipse" mnemonicParsing="false">
              <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0">
                  <image>
                    <Image url="@icons/ellipse.png" />
                  </image>
                </ImageView>
              </graphic>
              <tooltip>
                <Tooltip text="Ellipse" />
              </tooltip>
            </Button>
            <Button id="line" mnemonicParsing="false">
              <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0">
                  <image>
                    <Image url="@icons/line.png" />
                  </image>
                </ImageView>
              </graphic>
              <tooltip>
                <Tooltip text="Line" />
              </tooltip>
            </Button>
            <Button id="brush" mnemonicParsing="false">
              <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0">
                  <image>
                    <Image url="@icons/brush.png" />
                  </image>
                </ImageView>
              </graphic>
              <tooltip>
                <Tooltip text="Brush" />
              </tooltip>
            </Button>
            <Button id="directedLine" mnemonicParsing="false">
              <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0">
                  <image>
                    <Image url="@icons/directedLine.png" />
                  </image>
                </ImageView>
              </graphic>
              <tooltip>
                <Tooltip text="Directed Line" />
              </tooltip>
            </Button>
            <Button id="bidirectedLine" mnemonicParsing="false">
              <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0">
                  <image>
                    <Image url="@icons/bidirectedLine.png" />
                  </image>
                </ImageView>
              </graphic>
              <tooltip>
                <Tooltip text="Directed Line" />
              </tooltip>
            </Button>
            <ColorPicker onAction="#changeColor" fx:id="colorPicker" id="colorPicker">
              <value>
                <Color />
              </value>
            </ColorPicker>
            <ChoiceBox onAction="#changeWidth" id="choiceWidth" fx:id="choiceWidth" prefWidth="50.0" />
          </items>
        </ToolBar>
      </top>
      <center>
        <BorderPane fx:id="canvasPain">
          <Canvas fx:id="canvas"  />
        </BorderPane>
      </center>
    </BorderPane>
   </center>
</BorderPane>
